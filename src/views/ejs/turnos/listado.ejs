<% layout('layout') %>

<h1>Listado de Turnos</h1>

<table>
  <thead>
    <tr>
      <th>Fecha</th>
      <th>Hora</th>
      <th>ID del Paciente</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% if (turnos.length === 0) { %>
      <tr><td colspan="4">No hay turnos registrados.</td></tr>
    <% } %>
    <% turnos.forEach(turno => { %>
      <tr>
        <td><%= turno.fecha %></td>
        <td><%= turno.hora %></td>
        <td><%= turno.pacienteId %></td>
        <td>
          <form action="/local/turnos/<%= turno.id %>?_method=DELETE" method="POST">
            <button type="submit" class="boton boton-rojo">Cancelar</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
