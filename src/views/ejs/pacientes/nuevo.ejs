<% layout('layout') %>

<h1>Nuevo Paciente</h1>

<% if (typeof error !== 'undefined') { %>
  <p style="color: red;"><%= error %></p>
<% } %>

<form action="/local/pacientes" method="POST">
  <label for="nombre">Nombre:</label><br>
  <input type="text" id="nombre" name="nombre" value="<%= valores?.nombre || '' %>" required><br>

  <label for="apellido">Apellido:</label><br>
  <input type="text" id="apellido" name="apellido" value="<%= valores?.apellido || '' %>" required><br>

  <label for="email">Email:</label><br>
  <input type="email" id="email" name="email" value="<%= valores?.email || '' %>"><br>

  <label for="telefono">Tel√©fono:</label><br>
  <input type="text" id="telefono" name="telefono" value="<%= valores?.telefono || '' %>"><br>

  <button type="submit" class="boton boton-verde">Guardar Paciente</button>
  <a href="/local/pacientes" class="boton">Volver</a>
</form>